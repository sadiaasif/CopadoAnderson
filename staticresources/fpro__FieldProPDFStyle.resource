body {
	font-family: Arial, Helvetica, sans-serif;
	font-size:12px;
}
td {
    overflow: hidden;
    word-wrap: break-word;
    vertical-align: top;
    width:25%;
    border: 1px solid #ddd;
    padding: 5px;
}
@page {
	size: landscape;
	@bottom-center {
		content: "Page " counter(page) " of " counter(pages);
		font-family: Arial, Helvetica, sans-serif;
		font-size: 80%;
	}
}