    <decisions>
        <name>CheckCase</name>
        <label>CheckCase</label>
        <locationX>441</locationX>
        <locationY>240</locationY>
        <defaultConnector>
            <targetReference>CreateTask</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No Case</defaultConnectorLabel>
        <rules>
            <name>Case_Exists</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>CaseId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Task</targetReference>
            </connector>
            <label>Case Exists</label>
        </rules>
